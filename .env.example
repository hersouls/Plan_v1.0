# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Cloud Messaging (FCM) Configuration
VITE_FCM_VAPID_KEY=your-fcm-vapid-key

# Firebase Emulator Configuration (Development Only)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_AUTH_EMULATOR_URL=http://localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Application Configuration
VITE_APP_NAME=Moonwave Plan
VITE_APP_DESCRIPTION=가족과 함께하는 스마트한 할일 관리
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://plan.moonwave.kr

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG=true

# API Configuration
VITE_API_BASE_URL=https://api.moonwave.kr

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CLAUDE_AI=true

# Claude AI Configuration
# Get your API key from: https://console.anthropic.com
VITE_CLAUDE_API_KEY=your-claude-api-key
CLAUDE_API_KEY=your-claude-api-key
VITE_CLAUDE_MODEL=claude-3-5-sonnet-20241022
VITE_CLAUDE_MAX_TOKENS=4096

# Claude Features
VITE_CLAUDE_TASK_ASSISTANT=true
VITE_CLAUDE_SMART_SUGGESTIONS=true
VITE_CLAUDE_AUTO_CATEGORIZE=true

# Analytics (Optional)
# Get your tracking ID from Google Analytics
VITE_GOOGLE_ANALYTICS_ID=your-ga-id

# Error Reporting (Optional) 
# Get your DSN from Sentry.io
VITE_SENTRY_DSN=your-sentry-dsn